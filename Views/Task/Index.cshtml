@model TaskTracker.Models.TaskListViewModel

@{
    ViewData["Title"] = "Task List";
}

<div class="container">
    <h2>Task List</h2>

    <!-- Visa data fr친n TempData -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <!-- Visa data fr친n ViewBag -->
    <div class="alert alert-info">
        <strong>@ViewBag.Greeting</strong>
    </div>

    <a href="@Url.Action("Create")" class="btn">Add New Task</a>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Due Date</th>
                <th>Tags</th>
                <th>Status</th>
                <th>Urgent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks) // Anv칛nd Tasks fr친n ViewModel
            {
                <tr>
                    <td>@task.Name</td>
                    <td>@task.Description</td>
                    <td>@task.Priority</td>
                    <td>@task.DueDate.ToShortDateString()</td>
                    <td>@task.Tags</td>
                    <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
                    <td>
                        @if (task.IsUrgent)
                        {
                            <span style="color: red; font-weight: bold;">游뚿 Yes</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = task.Id })" class="btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = task.Id })" class="btn-danger">Delete</a>
                        @if (!task.IsCompleted)
                        {
                            <a href="@Url.Action("Complete", new { id = task.Id })" class="btn-success">Complete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Visa data fr친n ViewData -->
    <div class="alert alert-info">
        <strong>Total Tasks:</strong> @ViewData["TaskCount"]
    </div>

    <!-- Visa data fr친n ViewModel -->
    <div class="alert alert-warning">
        <strong>Message:</strong> @Model.GreetingMessage
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
